{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
        //,
        // "prettier"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [".js", ".jsx", ".ts", ".tsx"]
        }
      }
    },
    "rules": {
      "no-console": "off",
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "ts": "never" //ignorePackages funcionou melhor...
        }
      ],
      "prettier/prettier": ["error", {
        "singleQuote": true,
        "trailingComma": "all",
        "arrowParens": "avoid"
      }]
    }
}
